<div class='container'>
  <div class='row justify-content-center'>
    <div class='text-left col-12 col-lg-10 bg-warning border p-3'>
<p id="notice"><%= notice %></p>

<h1>Comment Board</h1>

<table>
  <thead>
    <tr>
      <th style="margin:10px;">Title</th>
      <th style="margin:10px;">Caption</th>
      <th style="margin:10px;" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.caption %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Click to Add New Comment', new_comment_path %>
</div>
</div>
</div>